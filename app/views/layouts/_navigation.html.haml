= link_to "Corobook", root_path, :class => 'brand'
%ul.nav
  %li
    =link_to 'Songs', songs_path

  - if user_signed_in?
    %li
      = link_to 'Songbooks', songbooks_path
    %li
      = link_to 'Presentaciones', presentations_path
    %li
      = link_to 'Diapositivas', diapos_path
    %li
      = link_to 'Logout', destroy_user_session_path, :method=>'delete'
  - else
    %li
      = link_to 'Login', new_user_session_path
  - if user_signed_in?
    %li
      = link_to 'Edit account', edit_user_registration_path
