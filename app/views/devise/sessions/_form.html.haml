= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
  = f.input :email, :autofocus => true
  = f.input :password
  .row
    .col-sm-6
      = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
    .col-sm-6
      = link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot_url' if devise_mapping.recoverable?
  = f.button :submit, "Sign in", :class => 'btn-primary col-sm-12'
  .clearfix
