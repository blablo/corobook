= simple_form_for(@setting) do |f|
  = f.error_notification

  .form-inputs
    = f.file_field :songs_background
    = f.input :songs_case, collection: ['none', 'capitalize', 'uppercase', 'lowercase']
    = f.input :songs_font_color
    = f.input :presentation_template
    = f.file_field :anniversaries_background

  .form-actions
    = f.button :submit
