%h1 Listing anniversaries

%table.table
  %tr
    %th Date
    %th Name
    %th Category
    %th
    %th

  - @anniversaries.each do |anniversary|
    %tr
      %td= anniversary.date.strftime('%d/%m')
      %td= anniversary.name
      %td= anniversary.category
      %td= link_to 'Edit', edit_anniversary_path(anniversary)
      %td= link_to 'Destroy', anniversary, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Anniversary', new_anniversary_path
