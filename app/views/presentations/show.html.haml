
.col-sm-12
  .row
    =link_to('On Air', live_presentation_url(@presentation), :class => 'col-sm-2 btn btn-danger btn-lg')
    =link_to('Editar', edit_presentation_url(@presentation), :class => 'col-sm-2 btn btn-default btn-lg')
.clearfix

-@presentation.contents.order('position asc').each do |content|
  .well
    -if content.song



      
      %h1=content.song.title
      -diapo = content.song.sorted_array_lyric(true)
      -if !content.song.order.blank?
        -diapo.each do |verse|
          %h5=verse[:label]
          %pre=chordify2(verse[:text])
            
      -else
        Le falta el orden de los versos..
        =link_to("Editar", edit_song_url(content.song))
    -else
      %h1=content.diapo.title
      %pre=raw content.diapo.info
