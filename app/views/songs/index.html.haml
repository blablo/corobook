.row
  .col-sm-8
    %h1 Canciones
  .col-sm-4.text-right
    =link_to('Nueva CanciÃ³n', new_song_path, :class => 'btn btn-primary btn-lg')
%hr 

%table.table.table-bordered.table-hover.table-striped
  %tr
    %th Titulo
    %th Autor
    %th Referencia
    %th Intensidad
    %th Grupo
    %th Creado por
    %th

  - @songs.each do |song|
    %tr{:id => "song"+song.id.to_s}
      %td=link_to song.title, song
      %td=song.author
      %td=song.reference
      %td=song.mood
      %td=song.group.name if song.group
      %td=song.user.name if song.user

      %td
        -if song.valid?
          =link_to(raw('<span class="glyphicon glyphicon-fullscreen"></span>'), live_song_url(song), :class => 'btn btn-default ')
    
        -if current_user and can?(:update, song)
          =link_to(raw('<span class="glyphicon glyphicon-pencil"></span>'), edit_song_url(song), :class => 'btn btn-default ')
        -if current_user and can?(:destroy, song)
          =link_to(raw('<span class="glyphicon glyphicon-trash"></span>'), song, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default ')


%br


