%table.table.table-bordered.table-hover.table-striped
  %tr
    %th Titulo
    %th Autor
    %th Referencia
    %th Intensidad



    %th


  - @songs.each do |song|
    %tr{:id => "song"+song.id.to_s}
      %td=link_to song.title, song
      %td=song.author
      %td=song.reference
      %td=song.mood



      %td
        -if current_user and current_user.role >= 3
          =link_to 'Editar', edit_song_path(song)
        -if current_user and current_user.is_admin?
          =link_to 'Eliminar', song, method: :delete, data: { confirm: 'Are you sure?' }

