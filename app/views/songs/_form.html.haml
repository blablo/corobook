= simple_form_for(@song) do |f|
  = f.error_notification

  .form-inputs
    .form-group
      =f.input :title, input_html: { class: 'form-control'}
    .form-group
      =f.input :author, input_html: { class: 'form-control'}
    .form-group
      =f.input :lyric, :input_html => { :style => "font-family: lucida console;", class: 'form-control'}
    .form-group
      =f.input :user_id, input_html: { class: 'form-control'}
    .form-group
      =f.input :link, input_html: { class: 'form-control'}
    .form-group
      =f.input :reference, input_html: { class: 'form-control'}
    .form-group
      =f.input :mood, input_html: { class: 'form-control'}
    .form-group
      =f.input :order, input_html: { class: 'form-control'}

  .form-actions
    = f.button :submit
